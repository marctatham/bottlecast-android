<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/app_nav"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.koala.messagebottle.main.home.HomeFragment"
        android:label="HomeFragment">
        <action
            android:id="@+id/action_homeToGetMessage"
            app:destination="@id/getMessageFragment" />
        <action
            android:id="@+id/action_homeToPostMessage"
            app:destination="@id/postMessageFragment" />
        <action
            android:id="@+id/action_homeToVewMessages"
            app:destination="@id/viewMessagesFragment" />
    </fragment>

    <fragment
        android:id="@+id/getMessageFragment"
        android:name="com.koala.messagebottle.main.getmessage.GetMessageFragment"
        android:label="GetMessageFragment" />

    <fragment
        android:id="@+id/postMessageFragment"
        android:name="com.koala.messagebottle.main.postmessage.ui.PostMessageFragment"
        android:label="PostMessageFragment" />

    <fragment
        android:id="@+id/viewMessagesFragment"
        android:name="com.koala.messagebottle.main.viewmessages.ViewMessagesFragment"
        android:label="ViewMessagesFragment" />
</navigation>